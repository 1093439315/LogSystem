<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="superSocket"
         type="SuperSocket.SocketEngine.Configuration.SocketServiceConfig, SuperSocket.SocketEngine" />
  </configSections>
  
  <superSocket xmlns="http://schema.supersocket.net/supersocket"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://schema.supersocket.net/supersocket http://schema.supersocket.net/v1-6/supersocket.xsd">

    <servers>
      <server 
        name="LogServer" 
        serverTypeName="LogServerType"
        ip="Any" 
        port="2012"
        keepAliveTime="1"
        maxConnectionNumber="20000"
        clearIdleSession="false"
        maxRequestLength="2048"
        textEncoding="UTF-8">
      </server>
    </servers>

    <serverTypes>
      <add name="LogServerType" type="SocketService.LogServer, SocketService"/>
    </serverTypes>

  </superSocket>
</configuration>